<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogAnimationEntryExit">
        <item name="android:windowEnterAnimation">@anim/scale_in_center</item>
        <item name="android:windowExitAnimation">@anim/scale_out_center</item>
    </style>

    <style name="DialogBottomInAnimationEntryExit">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="DialogBottomInAnimationExit">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="DialogAnimationExitOnly">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/scale_out_center</item>
    </style>

    <style name="DialogNoAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item> <!-- Required -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>