<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ui.VipStoreFragment">

    <include
        android:id="@+id/include"
        layout="@layout/home_dark_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_title_cons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.keylogic.mindi.Custom.BackgroundConstraintLayout
                android:id="@+id/chip_cons"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_6sdp"
                app:cornerRadius="@dimen/_6sdp"
                app:customHeight="@dimen/_36sdp"
                app:layout_constraintBottom_toBottomOf="@+id/title_cons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title_cons"
                app:strokeWidth="@dimen/_1sdp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chip_card"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    app:cardCornerRadius="@dimen/_18sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_chip" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/chip_count_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:fontFamily="@font/poetsen_one_regular"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/guest_chip"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/chip_add_img"
                    app:layout_constraintStart_toEndOf="@+id/chip_card"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/chip_add_img"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.keylogic.mindi.Custom.BackgroundConstraintLayout>

            <com.keylogic.mindi.Custom.BackgroundConstraintLayout
                android:id="@+id/cancel_cons"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                app:cornerRadius="@dimen/_6sdp"
                app:customHeight="@dimen/_34sdp"
                app:isPositive="false"
                app:layout_constraintBottom_toBottomOf="@+id/title_cons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title_cons"
                app:strokeWidth="@dimen/_1sdp">

                <ImageView
                    android:id="@+id/cancel_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_cancel" />

            </com.keylogic.mindi.Custom.BackgroundConstraintLayout>

            <com.keylogic.mindi.Custom.TitleConstraintLayout
                android:id="@+id/title_cons"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                app:isTitleStrokeEnabled="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cancel_cons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:titleHeight="@dimen/_40sdp">

                <com.keylogic.mindi.Custom.StrokeTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/vip_store"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.keylogic.mindi.Custom.TitleConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.keylogic.mindi.Custom.DialogBackgroundCard
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_minus6sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_title_cons">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_minus8sdp">

                <com.keylogic.mindi.Custom.TitleConstraintLayout
                    android:id="@+id/tab_cons"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:isTitleStrokeEnabled="true"
                    android:elevation="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:titleHeight="@dimen/_46sdp">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_4sdp"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tabIconTintMode="add"
                        app:tabIndicator="@null"
                        app:tabIndicatorAnimationMode="linear"
                        app:tabIndicatorFullWidth="true"
                        app:tabIndicatorGravity="stretch" />

                </com.keylogic.mindi.Custom.TitleConstraintLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/tab_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:strokeColor="@android:color/transparent"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tab_cons"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tab_card" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.keylogic.mindi.Custom.DialogBackgroundCard>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>