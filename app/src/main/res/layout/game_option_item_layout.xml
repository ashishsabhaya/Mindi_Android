<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="@dimen/_36sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.keylogic.mindi.custom.SeparationLRView
        android:id="@+id/go_top_separation_view"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/go_center_cons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginVertical="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@id/go_top_separation_view"
        app:layout_constraintBottom_toTopOf="@id/go_bottom_separation_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/go_option_icon_img"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_volume"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/game_menu_icon" />

        <com.keylogic.mindi.custom.StrokeTextView
            android:id="@+id/go_option_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume"
            android:text="@string/sound"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@id/go_option_icon_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.keylogic.mindi.custom.SeparationLRView
        android:id="@+id/go_bottom_separation_view"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>