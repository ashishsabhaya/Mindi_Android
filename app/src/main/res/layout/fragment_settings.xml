<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SettingsFragment">

    <include
        android:id="@+id/include"
        layout="@layout/home_light_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp">

        <include
            android:id="@+id/top_title_include"
            layout="@layout/top_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.keylogic.mindi.custom.DialogBackgroundCard
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_title_include"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_4sdp"
                android:paddingVertical="@dimen/_14sdp"
                android:paddingHorizontal="@dimen/_8sdp">

                <LinearLayout
                    android:id="@+id/option_linear1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.keylogic.mindi.custom.SelectionConstraintLayout
                        android:id="@+id/music_cons"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:isCommonGradient="true"
                        app:isElevationEnabled="false"
                        app:isBorderEnabled="true"
                        app:isSelected="true"
                        app:containerHeight="@dimen/_38sdp"
                        android:layout_marginHorizontal="@dimen/_6sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_6sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/music_card"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                app:cardCornerRadius="@dimen/_26sdp"
                                app:strokeColor="@android:color/transparent"
                                app:cardBackgroundColor="@color/setting_option_icon_bg"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_music"
                                    android:padding="@dimen/_6sdp"
                                    android:contentDescription="@string/image_content_description"/>

                            </com.google.android.material.card.MaterialCardView>

                            <com.keylogic.mindi.custom.StrokeTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:text="@string/music"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:gravity="center_vertical"
                                app:txtStrokeEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/music_switch"
                                app:layout_constraintStart_toEndOf="@id/music_card"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Switch
                                android:id="@+id/music_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:thumb="@drawable/thumb_selector"
                                android:track="@drawable/track_selector"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.keylogic.mindi.custom.SelectionConstraintLayout>

                    <com.keylogic.mindi.custom.SelectionConstraintLayout
                        android:id="@+id/sound_cons"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:isCommonGradient="true"
                        app:isElevationEnabled="false"
                        app:isBorderEnabled="true"
                        app:isSelected="true"
                        app:containerHeight="@dimen/_38sdp"
                        android:layout_marginHorizontal="@dimen/_6sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_6sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/sound_card"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                app:cardCornerRadius="@dimen/_26sdp"
                                app:strokeColor="@android:color/transparent"
                                app:cardBackgroundColor="@color/setting_option_icon_bg"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_volume"
                                    android:padding="@dimen/_6sdp"
                                    android:contentDescription="@string/image_content_description"/>

                            </com.google.android.material.card.MaterialCardView>

                            <com.keylogic.mindi.custom.StrokeTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:text="@string/sound"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:gravity="center_vertical"
                                app:txtStrokeEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/sound_switch"
                                app:layout_constraintStart_toEndOf="@id/sound_card"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Switch
                                android:id="@+id/sound_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:thumb="@drawable/thumb_selector"
                                android:track="@drawable/track_selector"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.keylogic.mindi.custom.SelectionConstraintLayout>

                    <com.keylogic.mindi.custom.SelectionConstraintLayout
                        android:id="@+id/vibration_cons"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:isCommonGradient="true"
                        app:isElevationEnabled="false"
                        app:isBorderEnabled="true"
                        app:isSelected="true"
                        app:containerHeight="@dimen/_38sdp"
                        android:layout_marginHorizontal="@dimen/_6sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_6sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/vibration_card"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                app:cardCornerRadius="@dimen/_26sdp"
                                app:strokeColor="@android:color/transparent"
                                app:cardBackgroundColor="@color/setting_option_icon_bg"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_vibration"
                                    android:padding="@dimen/_6sdp"
                                    android:contentDescription="@string/image_content_description"/>

                            </com.google.android.material.card.MaterialCardView>

                            <com.keylogic.mindi.custom.StrokeTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:text="@string/vibration"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:gravity="center_vertical"
                                app:txtStrokeEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/vibration_switch"
                                app:layout_constraintStart_toEndOf="@id/vibration_card"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Switch
                                android:id="@+id/vibration_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:thumb="@drawable/thumb_selector"
                                android:track="@drawable/track_selector"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.keylogic.mindi.custom.SelectionConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_linear2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/option_linear1">

                    <com.keylogic.mindi.custom.SelectionConstraintLayout
                        android:id="@+id/feedback_cons"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:isCommonGradient="true"
                        app:isElevationEnabled="false"
                        app:isBorderEnabled="true"
                        app:isSelected="true"
                        app:containerHeight="@dimen/_38sdp"
                        android:layout_marginHorizontal="@dimen/_6sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_6sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/feedback_card"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                app:cardCornerRadius="@dimen/_26sdp"
                                app:strokeColor="@android:color/transparent"
                                app:cardBackgroundColor="@color/setting_option_icon_bg"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_feed_back"
                                    android:padding="@dimen/_6sdp"
                                    android:contentDescription="@string/image_content_description"/>

                            </com.google.android.material.card.MaterialCardView>

                            <com.keylogic.mindi.custom.StrokeTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:text="@string/feedback"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:gravity="center_vertical"
                                app:txtStrokeEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/feedback_card"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.keylogic.mindi.custom.SelectionConstraintLayout>

                    <com.keylogic.mindi.custom.SelectionConstraintLayout
                        android:id="@+id/rate_us_cons"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:isCommonGradient="true"
                        app:isElevationEnabled="false"
                        app:isBorderEnabled="true"
                        app:isSelected="true"
                        app:containerHeight="@dimen/_38sdp"
                        android:layout_marginHorizontal="@dimen/_6sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_6sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/rate_us_card"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                app:cardCornerRadius="@dimen/_26sdp"
                                app:strokeColor="@android:color/transparent"
                                app:cardBackgroundColor="@color/setting_option_icon_bg"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_start"
                                    android:padding="@dimen/_6sdp"
                                    android:contentDescription="@string/image_content_description"/>

                            </com.google.android.material.card.MaterialCardView>

                            <com.keylogic.mindi.custom.StrokeTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:text="@string/rate_us"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:gravity="center_vertical"
                                app:txtStrokeEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/rate_us_card"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.keylogic.mindi.custom.SelectionConstraintLayout>

                    <com.keylogic.mindi.custom.SelectionConstraintLayout
                        android:id="@+id/how_to_play_cons"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:isCommonGradient="true"
                        app:isElevationEnabled="false"
                        app:isBorderEnabled="true"
                        app:isSelected="true"
                        app:containerHeight="@dimen/_38sdp"
                        android:layout_marginHorizontal="@dimen/_6sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_6sdp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/how_to_play_card"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                app:cardCornerRadius="@dimen/_26sdp"
                                app:strokeColor="@android:color/transparent"
                                app:cardBackgroundColor="@color/setting_option_icon_bg"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_how_to_play"
                                    android:padding="@dimen/_6sdp"
                                    android:contentDescription="@string/image_content_description"/>

                            </com.google.android.material.card.MaterialCardView>

                            <com.keylogic.mindi.custom.StrokeTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:text="@string/how_to_play"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:gravity="center_vertical"
                                app:txtStrokeEnabled="false"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/how_to_play_card"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.keylogic.mindi.custom.SelectionConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option_linear3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/privacy_policy_cons"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/option_linear2">

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:id="@+id/instagram_share"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        app:isCircular="true"
                        app:customHeight="@dimen/_40sdp"
                        app:isBGElevationEnabled="false"
                        app:isInstagram="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="@string/image_content_description"/>

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:id="@+id/messenger_share"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        app:isCircular="true"
                        app:customHeight="@dimen/_40sdp"
                        app:isBGElevationEnabled="false"
                        app:isMessenger="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_messenger"
                            android:contentDescription="@string/image_content_description"/>

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:id="@+id/whatsapp_share"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        app:isCircular="true"
                        app:customHeight="@dimen/_40sdp"
                        app:isBGElevationEnabled="false"
                        app:isWhatsapp="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_whatsapp"
                            android:contentDescription="@string/image_content_description"/>

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:id="@+id/any_share"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        app:customHeight="@dimen/_40sdp"
                        app:isCircular="true"
                        app:isBGElevationEnabled="false"
                        app:isShare="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/ic_share"
                            android:contentDescription="@string/image_content_description"/>

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/privacy_policy_cons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.keylogic.mindi.custom.SeparationView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/privacy_policy_txt"
                        app:layout_constraintStart_toStartOf="@+id/privacy_policy_txt"
                        app:layout_constraintEnd_toEndOf="@+id/privacy_policy_txt"/>

                    <com.keylogic.mindi.custom.StrokeTextView
                        android:id="@+id/privacy_policy_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_policy"
                        android:textSize="@dimen/_16ssp"
                        app:txtStrokeEnabled="false"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.keylogic.mindi.custom.DialogBackgroundCard>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>