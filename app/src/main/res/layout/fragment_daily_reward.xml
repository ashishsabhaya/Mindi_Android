<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DailyRewardFragment">

    <include
        android:id="@+id/include"
        layout="@layout/home_light_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_8sdp">

        <include
            android:id="@+id/top_title_include"
            layout="@layout/top_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.keylogic.mindi.custom.StrokeTextView
            android:id="@+id/rf_message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/_14ssp"
            android:gravity="center"
            app:txtStrokeEnabled="false"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/daily_reward_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_title_include"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rf_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/rf_watch_and_collect_btn_cons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rf_message_txt" />

        <com.keylogic.mindi.custom.StrokeTextView
            android:id="@+id/rf_or_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/or"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="@+id/rf_collect_btn_cons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rf_collect_btn_cons" />

        <com.keylogic.mindi.custom.BackgroundConstraintLayout
            android:id="@+id/rf_collect_btn_cons"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            app:customHeight="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:isBGElevationEnabled="false"
            app:strokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rf_or_txt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_2sdp"
                android:gravity="center">

                <com.keylogic.mindi.custom.StrokeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtStrokeEnabled="false"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:text="@string/collect"
                    android:textSize="@dimen/_12ssp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/ic_chip" />

                    <com.keylogic.mindi.custom.StrokeTextView
                        android:id="@+id/rf_chip_count_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtStrokeEnabled="false"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:text="@string/collect"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_4sdp"/>

                </LinearLayout>

            </LinearLayout>

        </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        <com.keylogic.mindi.custom.BackgroundConstraintLayout
            android:id="@+id/rf_watch_and_collect_btn_cons"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            app:customHeight="@dimen/_40sdp"
            app:isPositive="false"
            app:isBGElevationEnabled="false"
            app:strokeWidth="1dp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rf_or_txt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rf_watch_ad_img"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/free_chip_icon"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:contentDescription="@string/image_content_description"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:orientation="vertical">

                    <com.keylogic.mindi.custom.StrokeTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/collect"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:txtStrokeEnabled="false" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:contentDescription="@string/image_content_description"
                            android:src="@drawable/ic_chip" />

                        <com.keylogic.mindi.custom.StrokeTextView
                            android:id="@+id/rf_watch_ad_chip_count_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/collect"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:txtStrokeEnabled="false" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.keylogic.mindi.custom.BackgroundConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/reward_anim_rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>