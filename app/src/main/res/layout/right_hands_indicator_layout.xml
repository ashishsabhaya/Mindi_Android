<?xml version="1.0" encoding="utf-8"?>
<com.keylogic.mindi.custom.HandsIndicator
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:hBetViewContainerRadius="@dimen/_2sdp"
    app:hBetViewHeight="@dimen/_30sdp"
    app:isTopSide="true"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_38sdp"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/spades_linear"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:src="@drawable/count_spades"
                android:contentDescription="@string/image_content_description" />

            <com.keylogic.mindi.custom.BackgroundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:customHeight="@dimen/_14sdp"
                app:strokeWidth="1dp">

                <com.keylogic.mindi.custom.StrokeTextView
                    android:id="@+id/spades_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:txtStrokeEnabled="false" />

            </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hearts_linear"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:src="@drawable/count_hearts"
                android:contentDescription="@string/image_content_description"/>

            <com.keylogic.mindi.custom.BackgroundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:customHeight="@dimen/_14sdp"
                app:strokeWidth="1dp">

                <com.keylogic.mindi.custom.StrokeTextView
                    android:id="@+id/hearts_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:txtStrokeEnabled="false" />

            </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/clubs_linear"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:src="@drawable/count_clubs"
                android:contentDescription="@string/image_content_description"/>

            <com.keylogic.mindi.custom.BackgroundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:customHeight="@dimen/_14sdp"
                app:strokeWidth="1dp">

                <com.keylogic.mindi.custom.StrokeTextView
                    android:id="@+id/clubs_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:txtStrokeEnabled="false" />

            </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/diamonds_linear"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginVertical="@dimen/_1sdp"
                android:src="@drawable/count_diamonds"
                android:contentDescription="@string/image_content_description"/>

            <com.keylogic.mindi.custom.BackgroundConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:customHeight="@dimen/_14sdp"
                app:strokeWidth="1dp">

                <com.keylogic.mindi.custom.StrokeTextView
                    android:id="@+id/diamonds_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    app:txtStrokeEnabled="false" />

            </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hand_count_cons"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hand_card_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_content_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_18sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="@color/counter_txt_border"
                app:strokeWidth="1dp">

                <com.keylogic.mindi.custom.StrokeTextView
                    android:id="@+id/hand_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    app:txtStrokeEnabled="false" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</com.keylogic.mindi.custom.HandsIndicator>
