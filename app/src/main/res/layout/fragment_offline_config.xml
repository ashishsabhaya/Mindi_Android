<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ui.Offline.OfflineConfigFragment">

    <include
        android:id="@+id/include"
        layout="@layout/home_light_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_8sdp">

        <com.keylogic.mindi.Custom.BackgroundConstraintLayout
            android:id="@+id/chip_cons"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_36sdp"
            app:customHeight="@dimen/_36sdp"
            android:paddingHorizontal="@dimen/_6sdp"
            app:cornerRadius="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="@dimen/_1sdp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chip_card"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                app:cardCornerRadius="@dimen/_18sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_chip" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/chip_count_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/poetsen_one_regular"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/guest_chip"
                android:textColor="@color/textColorPrimary"
                app:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chip_card"
                app:layout_constraintTop_toTopOf="parent" />

        </com.keylogic.mindi.Custom.BackgroundConstraintLayout>

        <com.keylogic.mindi.Custom.BackgroundConstraintLayout
            android:id="@+id/cancel_cons"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            app:customHeight="@dimen/_34sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:cornerRadius="@dimen/_6sdp"
            app:isPositive="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_cancel"/>

        </com.keylogic.mindi.Custom.BackgroundConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deck_type_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_50sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>