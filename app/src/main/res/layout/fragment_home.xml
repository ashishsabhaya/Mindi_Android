<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">

    <include
        android:id="@+id/include"
        layout="@layout/home_light_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_8sdp">

        <com.keylogic.mindi.custom.BackgroundConstraintLayout
            android:id="@+id/profile_cons"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_36sdp"
            app:customHeight="@dimen/_36sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:cornerRadius="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_img_card"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:strokeWidth="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_guest_profile"
                    android:contentDescription="@string/image_content_description"/>

            </com.google.android.material.card.MaterialCardView>

            <com.keylogic.mindi.custom.StrokeTextView
                android:id="@+id/profile_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/guest"
                android:textSize="@dimen/_14ssp"
                android:singleLine="true"
                app:txtStrokeEnabled="false"
                android:gravity="center_vertical"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="@font/poetsen_one_regular"
                android:layout_marginStart="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profile_img_card"
                app:layout_constraintTop_toTopOf="parent" />

        </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        <com.keylogic.mindi.custom.BackgroundConstraintLayout
            android:id="@+id/chip_cons"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_36sdp"
            app:customHeight="@dimen/_36sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_6sdp"
            app:cornerRadius="@dimen/_6sdp"
            app:layout_constraintStart_toEndOf="@+id/profile_cons"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="@dimen/_1sdp">

            <ImageView
                android:id="@+id/chip_card"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:contentDescription="@string/image_content_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_chip" />

            <com.keylogic.mindi.custom.StrokeTextView
                android:id="@+id/chip_count_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:fontFamily="@font/poetsen_one_regular"
                android:gravity="center_vertical"
                android:singleLine="true"
                app:txtStrokeEnabled="false"
                android:text="@string/guest_chip"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/chip_add_img"
                app:layout_constraintStart_toEndOf="@+id/chip_card"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/chip_add_img"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_add"
                android:padding="@dimen/_2sdp"
                android:contentDescription="@string/image_content_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        <com.keylogic.mindi.custom.BackgroundConstraintLayout
            android:id="@+id/settings_cons"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            app:customHeight="@dimen/_36sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:cornerRadius="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/settings_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_settings"/>

        </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        <com.keylogic.mindi.custom.BackgroundConstraintLayout
            android:id="@+id/statistics_cons"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            app:customHeight="@dimen/_36sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:cornerRadius="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            app:layout_constraintEnd_toStartOf="@id/settings_cons"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/statistics_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_4sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_statistics"/>

        </com.keylogic.mindi.custom.BackgroundConstraintLayout>

        <com.keylogic.mindi.custom.StoreConstraintLayout
            android:id="@+id/vip_cons"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:borderRadius="@dimen/_8sdp"
            app:borderWidth="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeWidth="@dimen/_1sdp">

            <ImageView
                android:id="@+id/vip_img"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:contentDescription="@string/image_content_description"
                android:src="@drawable/ic_vip_store"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.keylogic.mindi.custom.StrokeTextView
                android:id="@+id/vip_store_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/poetsen_one_regular"
                android:gravity="center_vertical"
                app:txtStrokeEnabled="false"
                android:singleLine="true"
                android:text="@string/vip_store"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vip_img" />

        </com.keylogic.mindi.custom.StoreConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/free_chip_count_cons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/free_chip_cons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/free_chip_cons">

            <com.keylogic.mindi.custom.HandsIndicator
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_24sdp"
                android:paddingHorizontal="@dimen/_4sdp"
                app:hBetViewContainerRadius="@dimen/_4sdp"
                app:hBetViewHeight="@dimen/_24sdp"
                app:isCustomColor="true"
                app:isTopSide="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/free_chip_icon_img"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/ic_chip"
                    android:contentDescription="@string/image_content_description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.keylogic.mindi.custom.StrokeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:fontFamily="@font/poetsen_one_regular"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/free_chip_count"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/free_chip_icon_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:txtStrokeEnabled="false" />

            </com.keylogic.mindi.custom.HandsIndicator>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/free_chip_cons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_78sdp"
                android:layout_height="@dimen/_38sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeColor="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/free_chip_bg"
                        android:contentDescription="@string/image_content_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <View
                        android:id="@+id/shine"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_marginTop="@dimen/_minus4sdp"
                        android:background="@drawable/a_bg_shine"
                        android:rotation="16"
                        android:layout_marginStart="@dimen/_minus14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/free_chip_img"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:src="@drawable/free_chip_icon"
                android:contentDescription="@string/image_content_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_mode_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>