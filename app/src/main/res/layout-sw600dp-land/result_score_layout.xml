<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_44sdp">

    <com.keylogic.mindi.custom.CustomBorderConstraintLayout
        android:id="@+id/counter_cons"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_minus2sdp"
        android:paddingBottom="@dimen/_2sdp"
        app:bgStrokeColor="@color/green_team"
        app:bgStrokeWidth="@dimen/_1sdp"
        app:cbCornerRadiusTopLeft="@dimen/_6sdp"
        app:cbCornerRadiusTopRight="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <com.keylogic.mindi.custom.StrokeTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_16sdp"
                    android:gravity="center"
                    android:text="@string/hands"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    app:txtStrokeEnabled="false"
                    android:layout_marginBottom="@dimen/_2sdp"/>

                <com.keylogic.mindi.custom.BackgroundConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    app:customHeight="@dimen/_20sdp"
                    app:dBottomMargin="4dp"
                    app:isBGElevationEnabled="false">

                    <com.keylogic.mindi.custom.StrokeTextView
                        android:id="@+id/count_hand_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:padding="@dimen/_2sdp"
                        android:autoSizeTextType="uniform"
                        android:textColor="@color/white"
                        app:txtStrokeEnabled="false" />

                </com.keylogic.mindi.custom.BackgroundConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/count_spades" />

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        app:customHeight="@dimen/_20sdp"
                        app:dBottomMargin="4dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:isBGElevationEnabled="false">

                        <com.keylogic.mindi.custom.StrokeTextView
                            android:id="@+id/count_spades_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textColor="@color/white"
                            android:padding="@dimen/_3sdp"
                            android:autoSizeTextType="uniform"
                            app:txtStrokeEnabled="false" />

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/count_hearts" />

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        app:customHeight="@dimen/_20sdp"
                        app:dBottomMargin="4dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:isBGElevationEnabled="false">

                        <com.keylogic.mindi.custom.StrokeTextView
                            android:id="@+id/count_hearts_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textColor="@color/white"
                            android:padding="@dimen/_3sdp"
                            android:autoSizeTextType="uniform"
                            app:txtStrokeEnabled="false" />

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/count_clubs" />

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        app:customHeight="@dimen/_20sdp"
                        app:dBottomMargin="4dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:isBGElevationEnabled="false">

                        <com.keylogic.mindi.custom.StrokeTextView
                            android:id="@+id/count_clubs_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textColor="@color/white"
                            android:padding="@dimen/_3sdp"
                            android:autoSizeTextType="uniform"
                            app:txtStrokeEnabled="false" />

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/count_diamonds" />

                    <com.keylogic.mindi.custom.BackgroundConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        app:customHeight="@dimen/_20sdp"
                        app:dBottomMargin="4dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:isBGElevationEnabled="false">

                        <com.keylogic.mindi.custom.StrokeTextView
                            android:id="@+id/count_diamonds_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textColor="@color/white"
                            android:padding="@dimen/_3sdp"
                            android:autoSizeTextType="uniform"
                            app:txtStrokeEnabled="false" />

                    </com.keylogic.mindi.custom.BackgroundConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.keylogic.mindi.custom.CustomBorderConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>