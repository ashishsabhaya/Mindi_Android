<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_84sdp"
        android:layout_height="@dimen/_118sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reward_bg_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="0dp"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardBackgroundColor="@color/rnc_bottom"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reward_center_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="@dimen/_3sdp"
                app:strokeColor="@color/rnc_border"
                app:cardCornerRadius="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_3sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/reward_bottom_cons"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/reward_center_bg_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rnc_bg"
                            android:contentDescription="@string/image_content_description"/>

                        <ImageView
                            android:id="@+id/reward_chip_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/reward_day_5"
                            android:layout_margin="@dimen/_8sdp"
                            android:contentDescription="@string/image_content_description"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardElevation="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_minus1sdp"
                        app:strokeColor="@android:color/transparent"
                        style="@style/Widget.Material3.CardView.Outlined"
                        app:layout_constraintBottom_toTopOf="@id/reward_bottom_cons"/>

                    <com.keylogic.mindi.custom.SelectionConstraintLayout
                        android:id="@+id/reward_bottom_cons"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_26sdp"
                        app:isRewardNotCollected="true"
                        app:isElevationEnabled="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@color/rnc_border"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginHorizontal="@dimen/_4sdp">

                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:src="@drawable/ic_chip"
                                android:contentDescription="@string/image_content_description"/>

                            <com.keylogic.mindi.custom.StrokeTextView
                                android:id="@+id/reward_chip_count_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                app:txtStrokeEnabled="false"
                                android:singleLine="true"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:textColor="@color/white"
                                android:text="@string/guest"/>

                        </LinearLayout>

                    </com.keylogic.mindi.custom.SelectionConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reward_fg_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="0dp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_16sdp"
                app:cardBackgroundColor="@color/rc_fg">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rc_sign"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:contentDescription="@string/image_content_description"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reward_top_cons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/reward_top_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/next_reward_top_bg"
                android:contentDescription="@string/image_content_description"/>

            <ImageView
                android:id="@+id/reward_top_fg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rc_top_fg"
                android:visibility="gone"
                android:contentDescription="@string/image_content_description"/>

            <com.keylogic.mindi.custom.StrokeTextView
                android:id="@+id/reward_title_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/_9ssp"
                app:txtStrokeEnabled="false"
                android:text="@string/guest"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_6sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>