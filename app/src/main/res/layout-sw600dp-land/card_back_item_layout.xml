<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/vip_store_item_card"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_56sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeColor="@color/white"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/vip_store_item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cards_0" />

        </com.google.android.material.card.MaterialCardView>

        <com.keylogic.mindi.Custom.IconTextConstraintLayout
            android:id="@+id/vip_store_item_info_cons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            app:cViewHeight="@dimen/_16sdp"
            android:paddingHorizontal="@dimen/_3sdp"
            app:cIconResource="@drawable/ic_chip"
            app:cLabelText="@string/guest"
            app:cIconSize="@dimen/_8sdp"
            app:cIsElevationEnabled="false"
            app:cLabelTextSize="@dimen/_8ssp"
            app:cIsViewStrokeEnabled="true"
            app:cStrokeWidth="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vip_store_item_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>